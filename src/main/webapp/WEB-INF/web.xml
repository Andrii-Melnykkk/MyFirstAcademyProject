<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                       http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
    <display-name>BulletinBoard</display-name>



    <filter-mapping>
        <filter-name>cookieFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>securityManagerFilter</filter-name>
        <url-pattern>/managerTask/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>securityAdminFilter</filter-name>
        <url-pattern>/adminTask/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>securityUserFilter</filter-name>
        <url-pattern>/createAdvertisement</url-pattern>
    </filter-mapping>

    <welcome-file-list>

        <welcome-file>home</welcome-file>


    </welcome-file-list>


</web-app>
